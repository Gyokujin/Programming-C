#include <stdio.h>

int main()
{
	int numA = 0;
	int numB = 0;

	printf("수식을 작성합니다. \n");
	printf("첫번째 숫자를 작성하세요. ");
	scanf_s("%d", &numA);

	if (numA - (int)numA == 0) 
	{
		printf("첫번째 숫자는 %d 입니다.\n", numA);
	}
	else
	{
		printf("수를 입력해주세요.\n");
	}

	printf("두번째 숫자를 작성하세요. ");
	scanf_s("%d", &numB);

	if (numB - (int)numB == 0)
	{
		printf("두번째 숫자는 %d 입니다.\n", numB);
	}
	else 
	{
		printf("수를 입력해주세요.\n");
	}

	int correct = numA + numB;
	printf("두 수의 합은 %d 입니다.\n", correct);
}
