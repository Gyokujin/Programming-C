#include <stdio.h>

int main()
{
	// 2. 사용자로부터 입력 받은 3개의 상수를 각각 num1, num2, num3에 넣고, 
	// 다음 연산의 결과를 출력하라.

	int num1 = 0;
	int num2 = 0;
	int num3 = 0;

	printf("첫번째 숫자를 입력하세요. ");
	scanf_s("%d", &num1);

	printf("두번째 숫자를 입력하세요. ");
	scanf_s("%d", &num2);

	printf("세번째 숫자를 입력하세요. ");
	scanf_s("%d", &num3);

	int correct = (num1 - num2) * (num2 + num3) * (num3 % num1);
	printf("결과는 %d\n", correct);
}
