#include <stdio.h>

int main()
{
	int x = 0;
	int y = 0;
	int z = 0;

	printf("2개의 정수를 입력하세요. : ");
	scanf_s("%d %d", &x, &y);
	printf("%d - %d = %d\n", x, y, x - y);
	printf("%d x %d = %d\n", x, y, x * y);

	printf("3개의 정수를 입력하세요. : ");
	scanf_s("%d %d %d", &x, &y, &z);
	printf("(%d - %d) x (%d + %d) x (%d %% %d) = ", x, y, y, z, z, x);
	printf("%d\n", (x - y) * (y + z) * (z % x));

	printf("%d^2 = %d\n", x, x * x);
	printf("%d^2 = %d\n", y, y * y);
	printf("%d^2 = %d\n", z, z * z);
	return 0;
}
