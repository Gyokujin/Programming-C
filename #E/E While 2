#include <stdio.h>

int main()
{
    int total = 0;
    int count = 0;
    int num = 0;

    printf("0부터 num까지의 덧셈, num은? : ");
    scanf_s("%d", &num);

    while (count <= num)
    {
        total += count; // 반복문으로 더 간결하게 코드를 작성할 수 있다.
        count++;
    }

    printf("총합은 %d입니다. \n ", total);
}
